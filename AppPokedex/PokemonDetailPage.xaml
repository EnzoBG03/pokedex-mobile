<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppPokedex.PokemonDetailPage"
             BackgroundColor="#DC143C">

    <ContentPage.Content>
        <ScrollView>
            <Grid>
                <!-- Partie supérieure rouge -->
                <BoxView Color="#DC143C" Grid.Row="0" HeightRequest="200"/>

                <!-- Contenu principal -->
                <StackLayout Padding="20" VerticalOptions="FillAndExpand">

                    <!-- En-tête avec nom et numéro -->
                    <StackLayout Orientation="Horizontal" 
                                 HorizontalOptions="Center"
                                 Spacing="15"
                                 Margin="0,20,0,20">

                        <!-- Pokéball décorative -->
                        <Grid WidthRequest="35" HeightRequest="35">
                            <BoxView Color="#FF6B35" 
                                     WidthRequest="35" 
                                     HeightRequest="35"
                                     CornerRadius="17.5"/>
                            <BoxView Color="White" 
                                     WidthRequest="22" 
                                     HeightRequest="22"
                                     CornerRadius="11"/>
                            <BoxView Color="#DC143C" 
                                     WidthRequest="8" 
                                     HeightRequest="8"
                                     CornerRadius="4"/>
                        </Grid>

                        <StackLayout VerticalOptions="Center">
                            <Label x:Name="PokemonNameLabel"
                                   Text="POKÉMON" 
                                   FontSize="18" 
                                   FontAttributes="Bold"
                                   TextColor="White"
                                   HorizontalOptions="Center"/>
                            <Label x:Name="PokemonNumberLabel"
                                   Text="#000"
                                   FontSize="14"
                                   TextColor="#F5F5DC"
                                   HorizontalOptions="Center"/>
                        </StackLayout>
                    </StackLayout>

                    <!-- Carte principale du Pokémon -->
                    <Frame BackgroundColor="#F5F5DC" 
                           CornerRadius="15" 
                           Padding="20"
                           HasShadow="True"
                           Margin="0,0,0,15">

                        <StackLayout Spacing="20">

                            <!-- Image et informations de base -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Image du Pokémon -->
                                <StackLayout Grid.Column="0" HorizontalOptions="Center">
                                    <Frame BackgroundColor="White"
                                           CornerRadius="50"
                                           Padding="10"
                                           HasShadow="True"
                                           WidthRequest="120"
                                           HeightRequest="120">
                                        <Image x:Name="PokemonImage"
                                               Aspect="AspectFit"
                                               WidthRequest="100"
                                               HeightRequest="100"/>
                                    </Frame>

                                    <!-- Switch pour Shiny -->
                                    <StackLayout Orientation="Horizontal" 
                                                 HorizontalOptions="Center"
                                                 Spacing="10"
                                                 Margin="0,10,0,0">
                                        <Label Text="Shiny ✨" 
                                               FontSize="12" 
                                               TextColor="#2F4F4F"
                                               VerticalOptions="Center"/>
                                        <Switch x:Name="ShinySwitch"
                                                Toggled="OnShinyToggled"/>
                                    </StackLayout>
                                </StackLayout>

                                <!-- Informations de base -->
                                <StackLayout Grid.Column="1" Spacing="15" VerticalOptions="Center">

                                    <!-- Catégorie -->
                                    <StackLayout>
                                        <Label Text="CATÉGORIE" 
                                               FontSize="12" 
                                               FontAttributes="Bold"
                                               TextColor="#696969"/>
                                        <Label x:Name="CategoryLabel"
                                               Text="Pokémon Graine"
                                               FontSize="14"
                                               TextColor="#2F4F4F"/>
                                    </StackLayout>

                                    <!-- Types -->
                                    <StackLayout>
                                        <Label Text="TYPE(S)" 
                                               FontSize="12" 
                                               FontAttributes="Bold"
                                               TextColor="#696969"/>
                                        <StackLayout x:Name="TypesContainer"
                                                     Orientation="Horizontal"
                                                     Spacing="5"/>
                                    </StackLayout>

                                    <!-- Taille et Poids -->
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <StackLayout Grid.Column="0">
                                            <Label Text="TAILLE" 
                                                   FontSize="12" 
                                                   FontAttributes="Bold"
                                                   TextColor="#696969"/>
                                            <Label x:Name="HeightLabel"
                                                   Text="0.7 m"
                                                   FontSize="14"
                                                   TextColor="#2F4F4F"/>
                                        </StackLayout>

                                        <StackLayout Grid.Column="1">
                                            <Label Text="POIDS" 
                                                   FontSize="12" 
                                                   FontAttributes="Bold"
                                                   TextColor="#696969"/>
                                            <Label x:Name="WeightLabel"
                                                   Text="6.9 kg"
                                                   FontSize="14"
                                                   TextColor="#2F4F4F"/>
                                        </StackLayout>
                                    </Grid>

                                </StackLayout>
                            </Grid>

                        </StackLayout>
                    </Frame>

                    <!-- Statistiques -->
                    <Frame BackgroundColor="#F5F5DC" 
                           CornerRadius="15" 
                           Padding="20"
                           HasShadow="True"
                           Margin="0,0,0,15">

                        <StackLayout Spacing="15">
                            <Label Text="STATISTIQUES" 
                                   FontSize="16" 
                                   FontAttributes="Bold"
                                   TextColor="#2F4F4F"
                                   HorizontalOptions="Center"/>

                            <!-- Barres de statistiques -->
                            <StackLayout x:Name="StatsContainer" Spacing="10"/>

                        </StackLayout>
                    </Frame>

                    <!-- Informations supplémentaires -->
                    <Frame BackgroundColor="#F5F5DC" 
                           CornerRadius="15" 
                           Padding="20"
                           HasShadow="True"
                           Margin="0,0,0,15">

                        <StackLayout Spacing="15">
                            <Label Text="INFORMATIONS" 
                                   FontSize="16" 
                                   FontAttributes="Bold"
                                   TextColor="#2F4F4F"
                                   HorizontalOptions="Center"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Génération -->
                                <StackLayout Grid.Row="0" Grid.Column="0">
                                    <Label Text="GÉNÉRATION" 
                                           FontSize="12" 
                                           FontAttributes="Bold"
                                           TextColor="#696969"/>
                                    <Label x:Name="GenerationLabel"
                                           Text="I"
                                           FontSize="14"
                                           TextColor="#2F4F4F"/>
                                </StackLayout>

                                <!-- Taux de capture -->
                                <StackLayout Grid.Row="0" Grid.Column="1">
                                    <Label Text="CAPTURE" 
                                           FontSize="12" 
                                           FontAttributes="Bold"
                                           TextColor="#696969"/>
                                    <Label x:Name="CatchRateLabel"
                                           Text="45"
                                           FontSize="14"
                                           TextColor="#2F4F4F"/>
                                </StackLayout>

                                <!-- Groupes d'œufs -->
                                <StackLayout Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2">
                                    <Label Text="GROUPES D'ŒUFS" 
                                           FontSize="12" 
                                           FontAttributes="Bold"
                                           TextColor="#696969"/>
                                    <Label x:Name="EggGroupsLabel"
                                           Text="Monstrueux, Végétal"
                                           FontSize="14"
                                           TextColor="#2F4F4F"/>
                                </StackLayout>
                            </Grid>

                        </StackLayout>
                    </Frame>

                    <!-- Résistances/Faiblesses -->
                    <Frame BackgroundColor="#F5F5DC" 
                           CornerRadius="15" 
                           Padding="20"
                           HasShadow="True"
                           Margin="0,0,0,15">

                        <StackLayout Spacing="15">
                            <Label Text="RÉSISTANCES ET FAIBLESSES" 
                                   FontSize="16" 
                                   FontAttributes="Bold"
                                   TextColor="#2F4F4F"
                                   HorizontalOptions="Center"/>

                            <StackLayout x:Name="ResistancesContainer" Spacing="10"/>

                        </StackLayout>
                    </Frame>

                    <!-- Bouton retour -->
                    <StackLayout Orientation="Horizontal" 
                                 HorizontalOptions="Center"
                                 Spacing="20"
                                 Margin="0,15,0,20">
                        <Button x:Name="BackButton"
                                Text="← RETOUR" 
                                BackgroundColor="#696969"
                                TextColor="White"
                                FontSize="14"
                                FontAttributes="Bold"
                                CornerRadius="15"
                                WidthRequest="110"
                                HeightRequest="40"
                                Clicked="OnBackClicked"/>
                    </StackLayout>

                </StackLayout>
            </Grid>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>