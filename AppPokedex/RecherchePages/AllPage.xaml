<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppPokedex.RecherchePages.AllPage"
             BackgroundColor="#DC143C">

    <ContentPage.Content>
        <Grid>
            <!-- Partie supérieure rouge -->
            <BoxView Color="#DC143C" Grid.Row="0" HeightRequest="150"/>

            <!-- Contenu principal -->
            <StackLayout Padding="20" VerticalOptions="FillAndExpand">

                <!-- En-tête avec titre -->
                <StackLayout Orientation="Horizontal" 
                             HorizontalOptions="Center"
                             Spacing="15"
                             Margin="0,20,0,20">

                    <!-- Pokéball décorative -->
                    <Grid WidthRequest="35" HeightRequest="35">
                        <BoxView Color="#FF6B35" 
                                 WidthRequest="35" 
                                 HeightRequest="35"
                                 CornerRadius="17.5"
                                 HorizontalOptions="Center"
                                 VerticalOptions="Center"/>
                        <BoxView Color="White" 
                                 WidthRequest="22" 
                                 HeightRequest="22"
                                 CornerRadius="11"
                                 HorizontalOptions="Center"
                                 VerticalOptions="Center"/>
                        <BoxView Color="#DC143C" 
                                 WidthRequest="8" 
                                 HeightRequest="8"
                                 CornerRadius="4"
                                 HorizontalOptions="Center"
                                 VerticalOptions="Center"/>
                    </Grid>

                    <Label Text="TOUS LES POKÉMON" 
                           FontSize="18" 
                           FontAttributes="Bold"
                           TextColor="White"
                           VerticalOptions="Center"/>
                </StackLayout>

                <!-- Compteur de Pokémon -->
                <Frame BackgroundColor="#F5F5DC" 
                       CornerRadius="15" 
                       Padding="15"
                       HasShadow="True"
                       Margin="0,0,0,15">
                    <Label x:Name="CounterLabel"
                           Text="Chargement..."
                           FontSize="14"
                           FontAttributes="Bold"
                           TextColor="#2F4F4F"
                           HorizontalOptions="Center"/>
                </Frame>

                <!-- Liste des Pokémon -->
                <Frame BackgroundColor="#F5F5DC" 
                       CornerRadius="15" 
                       Padding="0"
                       HasShadow="True"
                       VerticalOptions="FillAndExpand">

                    <Grid>
                        <!-- Liste principale -->
                        <CollectionView x:Name="PokemonCollectionView"
                                        BackgroundColor="Transparent"
                                        SelectionMode="Single"
                                        SelectionChanged="OnPokemonSelected">

                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Padding="15,10" BackgroundColor="Transparent">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="1"/>
                                        </Grid.RowDefinitions>

                                        <!-- Contenu du Pokémon -->
                                        <Grid Grid.Row="0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="60"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Image du Pokémon -->
                                            <Frame Grid.Column="0"
                                                   BackgroundColor="White"
                                                   CornerRadius="25"
                                                   Padding="0"
                                                   HasShadow="False"
                                                   WidthRequest="50"
                                                   HeightRequest="50">
                                                <Image Source="{Binding sprites.regular}"
                                                       Aspect="AspectFit"
                                                       WidthRequest="45"
                                                       HeightRequest="45"/>
                                            </Frame>

                                            <!-- Informations du Pokémon -->
                                            <StackLayout Grid.Column="1" 
                                                         VerticalOptions="Center"
                                                         Spacing="2"
                                                         Margin="15,0,0,0">
                                                <Label Text="{Binding name.fr}"
                                                       FontSize="16"
                                                       FontAttributes="Bold"
                                                       TextColor="#2F4F4F"/>
                                                <Label Text="{Binding name.en}"
                                                       FontSize="12"
                                                       TextColor="#696969"/>
                                            </StackLayout>

                                            <!-- Numéro du Pokédex -->
                                            <Label Grid.Column="2"
                                                   Text="{Binding pokedex_id, StringFormat='#{0:D3}'}"
                                                   FontSize="14"
                                                   FontAttributes="Bold"
                                                   TextColor="#4169E1"
                                                   VerticalOptions="Center"/>
                                        </Grid>

                                        <!-- Séparateur -->
                                        <BoxView Grid.Row="1"
                                                 Color="#E0E0E0"
                                                 HeightRequest="1"
                                                 HorizontalOptions="FillAndExpand"
                                                 Margin="0,10,0,0"/>
                                    </Grid>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>

                        <!-- Indicateur de chargement -->
                        <ActivityIndicator x:Name="LoadingIndicator"
                                           IsVisible="True"
                                           IsRunning="True"
                                           Color="#FF6B35"
                                           VerticalOptions="Center"
                                           HorizontalOptions="Center"/>

                        <!-- Message d'erreur -->
                        <StackLayout x:Name="ErrorPanel"
                                     IsVisible="False"
                                     VerticalOptions="Center"
                                     HorizontalOptions="Center"
                                     Spacing="20">
                            <Label Text="❌"
                                   FontSize="40"
                                   HorizontalOptions="Center"/>
                            <Label Text="Erreur de chargement"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   TextColor="#DC143C"
                                   HorizontalOptions="Center"/>
                            <Button x:Name="RetryButton"
                                    Text="RÉESSAYER"
                                    BackgroundColor="#FF6B35"
                                    TextColor="White"
                                    CornerRadius="15"
                                    Clicked="OnRetryClicked"/>
                        </StackLayout>
                    </Grid>
                </Frame>

                <!-- Bouton retour -->
                <StackLayout Orientation="Horizontal" 
                             HorizontalOptions="Center"
                             Spacing="20"
                             Margin="0,15,0,0">
                    <Button x:Name="BackButton"
                            Text="← RETOUR" 
                            BackgroundColor="#696969"
                            TextColor="White"
                            FontSize="14"
                            FontAttributes="Bold"
                            CornerRadius="15"
                            WidthRequest="110"
                            HeightRequest="40"
                            Clicked="OnBackClicked"/>
                </StackLayout>

            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>