<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppPokedex.RecherchePages.FormPages.FormPage2"
             BackgroundColor="#DC143C">

    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="StatusLed" TargetType="Frame">
                <Setter Property="WidthRequest" Value="12" />
                <Setter Property="HeightRequest" Value="12" />
                <Setter Property="CornerRadius" Value="6" />
                <Setter Property="Padding" Value="0" />
                <Setter Property="HasShadow" Value="True" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.Content>
        <Grid>
            <!-- Background avec gradient -->
            <BoxView>
                <BoxView.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#DC143C" Offset="0.0" />
                        <GradientStop Color="#B22222" Offset="0.6" />
                        <GradientStop Color="#F5F5DC" Offset="1.0" />
                    </LinearGradientBrush>
                </BoxView.Background>
            </BoxView>

            <!-- Contenu principal -->
            <StackLayout Padding="20" VerticalOptions="FillAndExpand">

                <!-- En-tête avec titre dynamique -->
                <StackLayout Orientation="Horizontal" 
                             HorizontalOptions="Center"
                             Spacing="15"
                             Margin="0,20,0,20">

                    <!-- Pokéball décorative avec couleur régionale -->
                    <Grid WidthRequest="35" HeightRequest="35">
                        <BoxView x:Name="RegionColorIndicator"
                                 Color="#9370DB" 
                                 WidthRequest="35" 
                                 HeightRequest="35"
                                 CornerRadius="17.5"
                                 HorizontalOptions="Center"
                                 VerticalOptions="Center"/>
                        <BoxView Color="White" 
                                 WidthRequest="22" 
                                 HeightRequest="22"
                                 CornerRadius="11"
                                 HorizontalOptions="Center"
                                 VerticalOptions="Center"/>
                        <BoxView x:Name="RegionColorCenter"
                                 Color="#9370DB" 
                                 WidthRequest="8" 
                                 HeightRequest="8"
                                 CornerRadius="4"
                                 HorizontalOptions="Center"
                                 VerticalOptions="Center"/>
                    </Grid>

                    <StackLayout VerticalOptions="Center">
                        <Label x:Name="RegionTitle"
                               Text="FORMES RÉGIONALES" 
                               FontSize="18" 
                               FontAttributes="Bold"
                               TextColor="White"
                               VerticalOptions="Center"/>
                        <Label x:Name="RegionSubtitle"
                               Text="Région sélectionnée"
                               FontSize="12"
                               FontAttributes="Italic"
                               TextColor="#FFD700"
                               Opacity="0.9" />
                    </StackLayout>
                </StackLayout>

                <!-- Compteur de Pokémon régionaux -->
                <Frame BackgroundColor="#F5F5DC" 
                       CornerRadius="15" 
                       Padding="15"
                       HasShadow="True"
                       Margin="0,0,0,15">
                    <StackLayout Orientation="Horizontal" 
                                 HorizontalOptions="Center"
                                 Spacing="10">
                        <Label x:Name="RegionIcon"
                               Text="🌍" 
                               FontSize="16" />
                        <Label x:Name="CounterLabel"
                               Text="Chargement..."
                               FontSize="14"
                               FontAttributes="Bold"
                               TextColor="#2F4F4F"
                               VerticalOptions="Center"/>
                    </StackLayout>
                </Frame>

                <!-- Liste des Pokémon -->
                <Frame BackgroundColor="#F5F5DC" 
                       CornerRadius="15" 
                       Padding="0"
                       HasShadow="True"
                       VerticalOptions="FillAndExpand">

                    <Grid>
                        <!-- Liste principale -->
                        <CollectionView x:Name="PokemonCollectionView"
                                        BackgroundColor="Transparent"
                                        SelectionMode="Single"
                                        SelectionChanged="OnPokemonSelected">

                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Padding="15,10" BackgroundColor="Transparent">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="1"/>
                                        </Grid.RowDefinitions>

                                        <!-- Contenu du Pokémon -->
                                        <Grid Grid.Row="0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="60"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Image du Pokémon -->
                                            <Frame Grid.Column="0"
                                                   BackgroundColor="White"
                                                   CornerRadius="25"
                                                   Padding="0"
                                                   HasShadow="False"
                                                   WidthRequest="50"
                                                   HeightRequest="50">
                                                <Image Source="{Binding sprites.regular}"
                                                       Aspect="AspectFit"
                                                       WidthRequest="45"
                                                       HeightRequest="45"/>
                                            </Frame>

                                            <!-- Informations du Pokémon -->
                                            <StackLayout Grid.Column="1" 
                                                         VerticalOptions="Center"
                                                         Spacing="2"
                                                         Margin="15,0,0,0">
                                                <Label Text="{Binding name.fr}"
                                                       FontSize="16"
                                                       FontAttributes="Bold"
                                                       TextColor="#2F4F4F"/>
                                                <Label Text="{Binding name.en}"
                                                       FontSize="12"
                                                       TextColor="#696969"/>
                                            </StackLayout>

                                            <!-- Numéro du Pokédex -->
                                            <Label Grid.Column="2"
                                                   Text="{Binding pokedex_id, StringFormat='#{0:D3}'}"
                                                   FontSize="14"
                                                   FontAttributes="Bold"
                                                   TextColor="#4169E1"
                                                   VerticalOptions="Center"/>
                                        </Grid>

                                        <!-- Séparateur -->
                                        <BoxView Grid.Row="1"
                                                 Color="#E0E0E0"
                                                 HeightRequest="1"
                                                 HorizontalOptions="FillAndExpand"
                                                 Margin="0,10,0,0"/>
                                    </Grid>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>

                        <!-- Indicateur de chargement -->
                        <ActivityIndicator x:Name="LoadingIndicator"
                                           IsVisible="True"
                                           IsRunning="True"
                                           Color="#9370DB"
                                           VerticalOptions="Center"
                                           HorizontalOptions="Center"/>

                        <!-- Message d'erreur -->
                        <StackLayout x:Name="ErrorPanel"
                                     IsVisible="False"
                                     VerticalOptions="Center"
                                     HorizontalOptions="Center"
                                     Spacing="20">
                            <Label Text="❌"
                                   FontSize="40"
                                   HorizontalOptions="Center"/>
                            <Label Text="Erreur de chargement"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   TextColor="#DC143C"
                                   HorizontalOptions="Center"/>
                            <Button x:Name="RetryButton"
                                    Text="RÉESSAYER"
                                    BackgroundColor="#9370DB"
                                    TextColor="White"
                                    CornerRadius="15"
                                    Clicked="OnRetryClicked"/>
                        </StackLayout>

                        <!-- Message si aucun Pokémon trouvé -->
                        <StackLayout x:Name="EmptyPanel"
                                     IsVisible="False"
                                     VerticalOptions="Center"
                                     HorizontalOptions="Center"
                                     Spacing="20"
                                     Padding="40">
                            <Label x:Name="EmptyIcon"
                                   Text="🌍"
                                   FontSize="60"
                                   HorizontalOptions="Center"
                                   Opacity="0.6"/>
                            <Label Text="Aucune forme régionale trouvée"
                                   FontSize="18"
                                   FontAttributes="Bold"
                                   TextColor="#696969"
                                   HorizontalOptions="Center"/>
                            <Label x:Name="EmptyMessage"
                                   Text="Cette région ne contient pas de formes alternatives pour le moment."
                                   FontSize="14"
                                   TextColor="#999999"
                                   HorizontalOptions="Center"
                                   HorizontalTextAlignment="Center"/>
                        </StackLayout>
                    </Grid>
                </Frame>

                <!-- Informations sur la région sélectionnée -->
                <Frame x:Name="RegionInfoPanel"
                       BackgroundColor="#E6F3FF" 
                       CornerRadius="15" 
                       Padding="15"
                       HasShadow="True"
                       BorderColor="#B0D4FF"
                       Margin="0,15,0,0">
                    <StackLayout Orientation="Horizontal" 
                                 Spacing="10">
                        <Label x:Name="RegionInfoIcon"
                               Text="🏝️" 
                               FontSize="20"
                               VerticalOptions="Center" />
                        <StackLayout VerticalOptions="Center">
                            <Label x:Name="RegionInfoTitle"
                                   Text="Région d'Alola"
                                   FontSize="14"
                                   FontAttributes="Bold"
                                   TextColor="#2F4F4F" />
                            <Label x:Name="RegionInfoDescription"
                                   Text="Formes adaptées au climat tropical"
                                   FontSize="12"
                                   TextColor="#696969" />
                        </StackLayout>
                    </StackLayout>
                </Frame>

                <!-- Barre d'état -->
                <Frame BackgroundColor="#2F4F4F" 
                       CornerRadius="15" 
                       Padding="15"
                       HasShadow="True"
                       BorderColor="#1C3A3A"
                       Margin="0,15,0,0">

                    <Grid ColumnDefinitions="*,Auto,Auto">
                        <!-- Indicateur de statut -->
                        <StackLayout Grid.Column="0" 
                                     Orientation="Horizontal" 
                                     Spacing="10"
                                     VerticalOptions="Center">
                            <Label x:Name="ScanStatus"
                                   Text="TERMINÉ" 
                                   FontSize="12" 
                                   FontAttributes="Bold"
                                   TextColor="#32CD32"
                                   VerticalOptions="Center"/>
                        </StackLayout>

                        <!-- Compteur de formes -->
                        <StackLayout Grid.Column="1"
                                     Orientation="Horizontal"
                                     Spacing="5"
                                     Margin="10,0,15,0"
                                     VerticalOptions="Center">
                            <Label x:Name="StatusRegionIcon"
                                   Text="🌍" 
                                   FontSize="11" />
                            <Label x:Name="StatusCounter"
                                   Text="0" 
                                   FontSize="11" 
                                   FontAttributes="Bold"
                                   TextColor="#FFD700" />
                        </StackLayout>

                        <!-- LEDs d'état -->
                        <StackLayout Grid.Column="2" 
                                     Orientation="Horizontal" 
                                     Spacing="8"
                                     VerticalOptions="Center">
                            <Frame Style="{StaticResource StatusLed}"
                                   x:Name="StatusLed1"
                                   BackgroundColor="#32CD32" />
                            <Frame Style="{StaticResource StatusLed}"
                                   x:Name="StatusLed2"
                                   BackgroundColor="#9370DB" />
                        </StackLayout>
                    </Grid>
                </Frame>

                <!-- Boutons de navigation -->
                <StackLayout Orientation="Horizontal" 
                             HorizontalOptions="Center"
                             Spacing="20"
                             Margin="0,15,0,0">
                    <Button x:Name="BackButton"
                            Text="← RETOUR" 
                            BackgroundColor="#696969"
                            TextColor="White"
                            FontSize="14"
                            FontAttributes="Bold"
                            CornerRadius="15"
                            WidthRequest="110"
                            HeightRequest="40"
                            Clicked="OnBackClicked"/>
                </StackLayout>

            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>